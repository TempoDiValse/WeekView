<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WeekView">
        <attr name="android:textSize"></attr>
        <attr name="cornerRadius" format="dimension"></attr>

        <!-- Event -->
        <attr name="eventTitlePadding" format="dimension"></attr>
        <attr name="eventTextColor" format="color"></attr>
        <attr name="eventTextSize" format="dimension"></attr>
        <attr name="temporaryEventText" format="string"></attr>
        <attr name="temporaryEventColor" format="color"></attr>

        <!-- Separator -->
        <attr name="gridSeparatorColor" format="color"></attr>
        <attr name="gridSeparatorStrokeWidth" format="dimension"></attr>

        <!-- dayOfWeek -->
        <attr name="dayOfWeekHeight" format="dimension"></attr>
        <attr name="dayOfWeekVerticalPadding" format="dimension"></attr>
        <attr name="dayOfWeekTextSize" format="dimension"></attr>
        <attr name="dayOfWeekTextColor" format="color"></attr>
        <attr name="dayOfWeekTodayTextColor" format="color"></attr>
        <attr name="dayOfWeekSundayTextColor" format="color"></attr>
        <attr name="dayOfWeekSaturdayTextColor" format="color"></attr>

        <!-- Timeline -->
        <attr name="timelineRowHeight" format="dimension"></attr>
        <attr name="timelineTextSize" format="dimension"></attr>
        <attr name="timelineHorizontalPadding" format="dimension"></attr>
        <attr name="timeNowColor" format="color"></attr>
        <attr name="timeNowStrokeWidth" format="dimension"></attr>

        <!-- Allday -->
        <attr name="allDayEventText" format="string"></attr>
        <attr name="allDayEventTextSize" format="dimension"></attr>
        <attr name="allDayAreaHeight" format="dimension"></attr>

        <!-- Day -->
        <attr name="dayBackgroundColor" format="color"></attr>
        <attr name="todayBackgroundColor" format="color"></attr>
    </declare-styleable>
</resources>